<resources>

    <!-- tell_me_your_dpi -->
    <style name="Widget.tell_me_your_dpi" parent="@android:style/Widget.Material" />

    <!-- '?attr' is set to use the theme set in the 'AndroidManifest.xml'.  -->
    <style name="Widget.tell_me_your_dpi.Button" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">?attr/colorAccent</item>
        <item name="android:textColor">?android:textColor</item>
    </style>

    <!-- AppAbout -->
    <style name="Widget.tell_me_your_dpi.AppAbout" />

    <style name="Widget.tell_me_your_dpi.AppAbout.List">
        <item name="android:textSize">16sp</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="Widget.tell_me_your_dpi.Home" />

    <style name="Widget.tell_me_your_dpi.Home.ListTitle">
        <item name="android:textSize">15sp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>

    <style name="Widget.tell_me_your_dpi.Home.ListDescription">
        <item name="android:textSize">18sp</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>


    <!-- Oss Licence  -->
    <style name="oss_licence" />

    <!-- ActionBar styles -->
    <style name="oss_licence.ActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <!-- For oss license, Change background color of the ActionBar.-->
        <item name="background">@color/color_primary</item>
        <!-- For oss license, Change color of the title.-->
        <item name="titleTextStyle">@style/oss_licence.ActionBarTitleTextStyle</item>

        <!-- For oss license, Change ActionBar home button.-->
        <item name="homeAsUpIndicator">@drawable/ic_actionbar_arrow_back</item>

        <!-- Setting to change the color of Actionbar Home button. but it didn't work. -->
