<resources>

    <!-- Base application theme. Disable AppBar to enable Toolbar -->
    <!-- https://developer.android.com/training/appbar/setting-up?hl=ja -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Required to change Toolbar text color to white.  -->
    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColorPrimary">@color/toolbarText</item>
        <item name="android:textColorSecondary">@color/toolbarText</item>
    </style>

</resources>
