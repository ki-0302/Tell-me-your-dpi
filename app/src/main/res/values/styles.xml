<resources>

    <!-- Base application theme. Disable AppBar to enable Toolbar -->
    <!-- https://developer.android.com/training/appbar/setting-up?hl=ja -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>
    </style>

    <!-- Required to change Toolbar text color to white.  -->
    <style name="ToolbarTheme" parent="Theme.MaterialComponents.DayNight">
        <item name="android:textColorPrimary">@color/toolbarText</item>
        <item name="android:textColorSecondary">@color/toolbarText</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="OssLicenceTheme" parent="Theme.MaterialComponents.DayNight">
        <item name="actionBarStyle">@style/OssLicenceActionBar</item>
    </style>

    <!-- ActionBar styles -->
    <style name="OssLicenceActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <!-- For oss license, Change background color of the ActionBar.-->
        <item name="background">@color/colorPrimary</item>
        <!-- For oss license, Change color of the title.-->
        <item name="titleTextStyle">@style/OssLicenceActionBarTitleTextStyle</item>

        <!-- For oss license, Change ActionBar home button.-->
        <item name="homeAsUpIndicator">@drawable/ic_actionbar_arrow_back</item>

        <!-- Setting to change the color of Actionbar Home button. but it didn't work. -->
<!--        <item name="android:windowContentOverlay">@null</item>-->
<!--        <item name="colorControlNormal">@color/toolbarText</item>-->
<!--        <item name="drawerArrowStyle">@style/MyDrawerArrowToggle</item>-->
    </style>

<!--    <style name="MyDrawerArrowToggle" parent="Widget.AppCompat.DrawerArrowToggle">-->
<!--        <item name="spinBars">true</item>-->
<!--        <item name="color">#FFF</item>-->
<!--    </style>-->

    <!-- タイトルカラーの設定 -->
    <style name="OssLicenceActionBarTitleTextStyle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/toolbarText</item>
    </style>
</resources>
