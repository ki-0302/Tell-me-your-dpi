<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Splash Screen -->
    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <!-- 背景に背景かアニメーションアイコンを設定する -->
        <item name="windowSplashScreenBackground">@color/color_primary</item>

        <!-- アニメーションアイコンかdrawableを表示するアイコンとして設定する -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/animator_logo</item>
        <!-- 最大1000。Android 12以上で有効 -->
        <item name="windowSplashScreenAnimationDuration">1000</item>

        <!-- Splash Screenの次に表示するActivityのテーマを指定する -->
        <item name="postSplashScreenTheme">@style/AppTheme</item>
    </style>

    <!-- Base application theme. Disable AppBar to enable Toolbar -->
    <!-- https://developer.android.com/training/appbar/setting-up?hl=ja -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item> <!-- 効かない -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
        <item name="android:statusBarColor">@color/color_primary</item>
        <item name="android:textColor">@color/text_color</item>
        <!-- Button style for MaterialComponents. -->
        <item name="materialButtonStyle">@style/Widget.tell_me_your_dpi.Button</item>
    </style>

    <style name="OssLicenseTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="titleTextColor">@color/toolbar_text</item>
        <item name="android:statusBarColor">@color/color_primary</item>
        <item name="homeAsUpIndicator">@drawable/ic_actionbar_arrow_back</item>
    </style>

</resources>